#Python 2 with Image Processing Libraries
#
# --- Image Stack ---
# chiu0602/python2-imaging
# chiu0602/python2-baseline

FROM chiu0602/python2-baseline

RUN apt-get update && \
  apt-get install -y \
    libjpeg-turbo libjpeg-turbo-dev \
    libpng libpng-dev \
    libtiff libtiff-dev \
    freetype freetype-dev \
    openjpeg openjpeg-dev \
    zlib zlib-dev \
    libzip libzip-dev \
    lcms2 lcms2-dev \
    tcl tcl-dev \
    tk tk-dev \
    libwebp libwebp-dev \
    ImageMagick \
