#Python 2 with Image Processing Libraries
#
# --- Image Stack ---
# chiu0602/python2-imaging
# chiu0602/python2-baseline

FROM chiu0602/python2-baseline

RUN apt-get update && \
  apt-get install -y \
    libpng-dev \
    libtiff-dev \
    libzip-dev \
    tcl tcl-dev \
    tk tk-dev \
    libwebp-dev \
    ImageMagick \
    libgtk2.0-dev
